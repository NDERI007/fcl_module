<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Journal for the second Paystack payment method -->

        <record id="journal_paystack_2" model="account.journal">
            <field name="name">Paystack Payment</field>
            <field name="code">PAY2S</field>
            <field name="type">bank</field>
            <field name="sequence">12</field>
        </record>

        <!-- Second payment method configuration -->
        <record id="payment_method_PAYstack" model="pos.payment.method">
            <field name="name">Paystack</field>
            <field name="journal_id" ref="journal_paystack_2"/>
            <field name="use_payment_terminal">Paystack</field>
        </record>

</odoo>